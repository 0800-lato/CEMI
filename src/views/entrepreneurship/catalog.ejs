<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head',{ title : 'Catalog' }) %>

  <body class="catalog catalog__main__container">
    <%- include('../partials/header',{ title : 'Catalog' }) %>

    <main class="container ">
      <div class="banner">
      </div>

      <!--buscador de categorias-->
        <nav class="catalog__main__section__navbar">
          <div class="row">
            <div class="col-12 col-md-6">
              <form action="/entrepreneurships/filter" method="GET" class="d-flex align-items-center gap-2">
                <select name="category" id="" class="form-select">
                  <option value="" selected hidden>Filtrar por categorías</option>
                  <option value="belleza">
                    Belleza
                  </option>
                  <option value="tecnología">
                    Tecnología
                  </option>  
                  <option value="accesorios">
                    Accesorios
                  </option>  
                  <option value="gastronomía">
                    Gastronomía
                  </option>  
                  <option value="indumentaria">
                    Indumentaria
                  </option> 
                </select>
                <button
                class="btn btn-outline-light"
                style="background-color: var(--color-salmonRed)"
                type="submit"
              
              >
                Filtrar
              </button>
            
              </form>
            </div>
           <div class="col-12 col-md-6">
            <form class="d-flex gap-2" role="search">
              <input
                class="form-control"
                type="search"
                placeholder="O ingresá lo que querés buscar..."
                aria-label="Search"
              />
              <button
              class="btn btn-outline-light"
              style="background-color: var(--color-salmonRed)"
              type="submit"
            
            >
            Buscar
          </button>
            </form>
           </div>
           
         
          </div>
        </nav>
        <section  class="catalog__main__section">
          <section class="row row-gap-2 position-relative" style="padding-bottom: 100px;"><!-- Contenedor de todos los productos -->
					
            <% entrepreneurships.forEach(({id,links, image, title, category}) => { %>
              <div class="col-12 col-md-6">
                <article class="card shadow">
                  <div class="card-body ">
                    <div class="row">
                      <div class="col-12 col-lg-4 d-flex justify-content-center align-items-start">
                        <img class="img-fluid" style="height: 300px; object-fit: contain;"                  src="<%= /(?:https?):\/\/(\w+:?\w*)?(\S+)(:\d+)?(\/|\/([\w#!:.?+=&%!\-\/]))?/.test(image) ? image : `/images/${image}`%>"
                        alt="">
                      </div>
                      <div class="col-12 col-lg-8 p-2">
                       <h6 class="category"><%= category %></h6> <h2 class="name"><%= title %> </h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</p><a class="links" href="/entrepreneurships<%= links%>"> 
                          <i class="fa-brands fa-<%= links == "Facebook" ? 'facebook' : links == "Instagram" ? 'instagram' : 'linkedin' %>"></i> </a>
                        <article>
                        <a class="more" href="/entrepreneurships/<%= id %>">ver más</a></article>
                      </div>
  
                    
                    </div>
                    
                  </div><!-- Contenedor de cada producto -->
                  
                </article>
              </div>
              
            <% }) %>
            <nav class="position-absolute bottom-0 justify-content-center d-flex">
              <ul class="pagination">
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                  </a>
                </li>
               <% for( let i = 1; i <= totalPages; i++ ) { %>
                <li class="page-item <%= page == i && 'active' %>"><a class="page-link" href="/entrepreneurships/catalog?page=<%= i %>"><%= i %></a></li>
      
               <% } %>
                <li class="page-item">
                  <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                  </a>
                </li>
              </ul>
            </nav>
          
          </section>
      
        
    

      </section>


 
     
    </main>
<%- include('../partials/footer',{title :'catalog'}) %>
  </body>
</html>
